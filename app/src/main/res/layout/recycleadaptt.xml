<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/listborder"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/babaname"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="true"
        android:textColor="@color/saffr"
        android:gravity="bottom"
        android:textSize="22sp"
        />

    <ImageView
        android:id="@+id/imagii"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/babaname"
        android:layout_toRightOf="@+id/babaname"
        app:srcCompat="@drawable/arrr"
        />
</RelativeLayout>
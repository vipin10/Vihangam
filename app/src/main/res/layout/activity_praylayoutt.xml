<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f5"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="324dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/prayypage"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:background="@drawable/listborder">



                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/prayermonring"
                    android:textColor="#000000"
                    android:textSize="18sp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@drawable/textborder"
                   android:layout_gravity="center"
                   android:layout_marginTop="30dp"

                   >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:id="@+id/mrngprayertime"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/colorAccent"
                    android:text="HH:MM" />



               </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Alarm Set!"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginLeft="2dp"
                android:layout_weight=".5"
                android:background="@drawable/listborder"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/prayerevng"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/textborder"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:textColor="@color/colorAccent"
                        android:text="HH:MM" />



                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Alarm Not Set!"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginBottom="168dp"
        android:orientation="horizontal"
        android:background="@drawable/listborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="141dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/aarti"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AARTI"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/playy"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@drawable/listborder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/swamiji"
                />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VANDANA"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="12dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/roboto"
                />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/playy"
            />
    </LinearLayout>
        </LinearLayout>




</android.support.constraint.ConstraintLayout>
